{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "AWS Lambda functions for Todo API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
